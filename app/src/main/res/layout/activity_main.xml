            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:text="@string/str_btn_calculate"
            android:textSize="18sp" />

    </LinearLayout>

