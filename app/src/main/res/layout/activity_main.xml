                        android:text="@string/str_q4_op1" />

                    <CheckBox
                        android:id="@+id/q4_input2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_q4_op2" />

                    <CheckBox
                        android:id="@+id/q4_input3"
